<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenFoodFactsSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#FF5722</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#22ff57</item>
        <item name="colorSecondaryVariant">#22ff57</item>
        <item name="colorOnSecondary">#5722ff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FF5722</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OpenFoodFactsSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.OpenFoodFactsSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OpenFoodFactsSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>